{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Languages",
  "properties": {
    "languages": {
      "description": "A list of languages supported by the workflow",
      "type": "array",
      "items": {
        "title": "Language",
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the language as written in said language",
            "type": "string"
          },
          "id": {
            "description": "The language's ISO 639-1 code",
            "type": "string",
            "pattern": "^[a-z]{2}(_[A-Z]{2})?$"
          }
        }
      }
    },
    "default_language": "en"
  }
}

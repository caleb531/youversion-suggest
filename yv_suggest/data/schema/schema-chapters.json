{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Chapter Counts",
  "description": "A list of chapter counts for each book of the Bible",
  "type": "object",
  "patternProperties": {
    "^([a-z]{3}|[1-9][a-z]{2})$": {
      "title": "Chapter Count",
      "type": "integer",
      "minimum": 1
    }
  },
  "additionalProperties": false
}
